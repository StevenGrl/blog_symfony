{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - {{ 'blog.title'|trans }}
{% endblock %}

{% block javascript %}
    <script src="{{ asset('count_articles.js') }}"></script>
{% endblock %}

{% block menu %}
    {% if is_granted("ROLE_ADMIN") %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('article_new') }}">{{ 'menu.add_article'|trans }}</a>
    </li>
    {% endif %}
{% endblock %}

{% block h1 %}
    {{ parent() }} - {{ 'blog.h1'|trans }}
{% endblock %}

{% block content %}
    {% block articles %}
    {% endblock %}
    <p class="mt-5 font-weight-bold text-center">@Written By Grillon Steven</p>
{% endblock %}